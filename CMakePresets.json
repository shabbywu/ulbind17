{
	"version": 5,
	"configurePresets": [
		{
			"name": "default",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin/"
			}
		}
	],
	"buildPresets": [
		{
			"name": "default",
			"configurePreset": "default",
			"condition": {
				"type": "notEquals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		}
	]
}
